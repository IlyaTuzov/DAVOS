<?xml version="1.0" encoding="UTF-8"?>
<data>

    <DAVOS
        report_dir = "/home/tester/HTWEB/NOELV/RFR"
        experiment_label = "RFR"
        platform = "Multicore"
        maxproc = "2" >

		<ModelConfig
			work_dir = "../HTWEB/NOELV/RFR"
            checkpoint = "./checkpoints/RFR_1_matmult_20.sim"
            design_type = "RTL"
			label = "RFR_1_matmult_20"
			clk_period = "5.0"
            simulation_time = "17500"
		/>

		<ModelConfig
			work_dir = "../HTWEB/NOELV/RFR"
            checkpoint = "./checkpoints/RFRV2_1_matmult.sim"
            design_type = "RTL"
			label = "RFRV2_1_matmult"
			clk_period = "5.0"
            simulation_time = "17500"
		/>

		<ModelConfig
			work_dir = "../HTWEB/NOELV/RFR"
            checkpoint = "./checkpoints/ORIG_1_matmult_20.sim"
            design_type = "RTL"
			label = "ORIG_1_matmult_20"
			clk_period = "5.0"
            simulation_time = "17500"
		/>




        <!-- platform: Multicore / Grid / GridLight 
            #RUNDIR - path from where SBFI tool is launched
            mode = clean / continue
        -->
        <SBFI
            clean_run = "on"
            checkpoint_mode = "ColdRestore"
            initializer = "on"
            profiler = "off"
            injector = "on"
            reportbuilder = "on"
            time_quota =  "20:00:00"
            fault_dictionary = "./FaultDictionaries/Xilinx_Unisim_Ver.xml"
            >

            <!-- unit path: withing the design scope-->
            <InjectionScope unit_path = "/testbench/cpu/core0/noelv0/cpuloop(0)/core/u0/iu0"
                            node_filter = "r.*"
                            scope_filter = "-internal" />




            <ObservationScope unit_path = "/testbench/cpu/core0/noelv0/cpuloop(0)/core/u0/ramrf/rf0"
                              node_filter = "*rfd"
                              sampling_options = "-notrigger"
                              scope_filter = "-internal"
                              group = "INTERNALS"
                              label_prefix = "Core0_Regfile_"
                              domain = "Core0"
            />

            <ObservationScope unit_path = "/testbench/cpu/core0/noelv0/cpuloop(1)/core/u0/ramrf/rf0"
                              node_filter = "*rfd"
                              sampling_options = "-notrigger"
                              scope_filter = "-internal"
                              group = "INTERNALS"
                              label_prefix = "Core1_Regfile_"
                              domain = "Core1"
            />

            <ObservationScope unit_path = "/testbench/cpu/core0/noelv0/cpuloop(2)/core/u0/ramrf/rf0"
                              node_filter = "*rfd"
                              sampling_options = "-notrigger"
                              scope_filter = "-internal"
                              group = "INTERNALS"
                              label_prefix = "Core2_Regfile_"
                              domain = "Core2"
            />


            <ObservationItem
                path= "/testbench/cpu/sim_mem_gen/ahb_mem_gen/mig_ahbram/ram_trace"
                array_range = "0:4"
                label = "Core0.Res"
                sampling_options = ""
                group = "OUTPUTS"
                domain = "Core0"
            />

            <ObservationItem
                path= "/testbench/cpu/sim_mem_gen/ahb_mem_gen/mig_ahbram/ram_trace"
                array_range = "16:20"
                label = "Core1.Res"
                group = "OUTPUTS"
                domain = "Core1"
            />

            <ObservationItem
                path= "/testbench/cpu/sim_mem_gen/ahb_mem_gen/mig_ahbram/ram_trace"
                array_range = "32:36"
                label = "Core2.Res"
                sampling_options = ""
                group = "OUTPUTS"
                domain = "Core2"
            />

            <faultload
                model = "BitFlip"
                target_logic = "SIGNAL"
                multiplicity = "1"
                time_mode = "Relative"
                injection_time_start = "0.0"
                injection_time_end = "1.0"
                experiments_per_target = "1"

                sample_size = "100"
                rand_seed	= "1"
                CCF = "{core0/noelv0/cpuloop(0)} {core0/noelv0/cpuloop(1)} {core0/noelv0/cpuloop(2)}"
            />

            <!-- domain_mode: "" / SIMPLEX / TMR -->
            <Analyzer
                mode = "MLV"
                domain_mode = "TMR"
                time_window = ""
                max_time_violation = "0"
                error_flag_signal = ""
                error_flag_active_value = "1"
                trap_type_signal = ""
                threads = "4"
                >

                <join_groups>
                </join_groups>

                <rename_list>
                </rename_list>

            </Analyzer>

        </SBFI>



    </DAVOS>
</data>
